!!!
%html{"lang" => "es", "ng-app" => "miti"}
	%head

		%meta{:charset => 'utf-8'}
		%meta(http-equiv = 'X-UA-Compatible' content = 'IE=edge')
		%meta(name = 'viewport' content = 'width=device-width, initial-scale=1, maximum-scale=1')
		%meta{:content => "Somos una comunidad de empresas tecnológicas que trabajan en Chile, buscamos subir la vara de la industria nacional a través de la excelencia en la generación de valor, entornos humanos y desarrollos tecnológicos.", :name => "description"}/
		%meta{:content => "keyword,s", :name => "keywords"}
		%meta{:content => "MITI", :name => "author"}
		%meta{:content => "0000000", :property => "fb:app_id"}
		%meta{:content => "http://www.miti.cl", :property => "og:url"}
		%meta{:content => "Mejor Industria TI", :property => "og:title"}
		%meta{:content => "http://www.miti.cl/img/logo_box.png", :property => "og:image"}
		%meta{:content => "Somos una comunidad de empresas tecnológicas que trabajan en Chile, buscamos subir la vara de la industria nacional a través de la excelencia en la generación de valor, entornos humanos y desarrollos tecnológicos.", :property => "og:description"}
		%link{:href => "img/favicon.ico", :rel => "shortcut icon"}/
		= stylesheet_link_tag 'all'	
		%title 
			= current_page.data.title || 'Title'
		/[if lt IE 9] <script src="js/ie8-responsive-file-warning.js"></script> <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"> </script><script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>

	%body{:class => page_classes}
		= yield
		
		= javascript_include_tag  "angular.min"
		= javascript_include_tag  "angular-resource.min"
		= javascript_include_tag  "controllers"

		= javascript_include_tag 'all'
		
		= javascript_include_tag 'analytics'
		:javascript
			var revapi;
				jQuery(document).ready(function() {
					revapi = jQuery('.tp-banner').revolution(
					{
					dottedOverlay:"none",
						delay:16000,
						startwidth:1170,
						startheight:700,
						hideThumbs:200,
						
						thumbWidth:100,
						thumbHeight:50,
						thumbAmount:5,
						
						navigationType:"bullet",
						
						touchenabled:"on",
						onHoverStop:"on",
						
						swipe_velocity: 0.7,
						swipe_min_touches: 1,
						swipe_max_touches: 1,
						drag_block_vertical: false,
												
						parallax:"mouse",
						parallaxBgFreeze:"on",
						parallaxLevels:[7,4,3,2,5,4,3,2,1,0],
												
						keyboardNavigation:"off",
						
						navigationHAlign:"center",
						navigationVAlign:"bottom",
						navigationHOffset:0,
						navigationVOffset:20,

								
						shadow:0,
						fullWidth:"off",
						fullScreen:"on",

						shuffle:"off",
						
						autoHeight:"off",						
						forceFullWidth:"off",						

						hideThumbsOnMobile:"off",
						hideNavDelayOnMobile:1500,						
						hideBulletsOnMobile:"off",
						hideArrowsOnMobile:"off",
						hideThumbsUnderResolution:0,
						
						hideSliderAtLimit:0,
						hideCaptionAtLimit:0,
						hideAllCaptionAtLilmit:0,
						startWithSlide:0
					});
			}); //ready
